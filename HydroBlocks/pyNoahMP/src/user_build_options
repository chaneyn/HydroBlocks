#
#  Options for Linux with gfortran
#

 COMPILERF90 =	gfortran -L/usr/lib64 -L/lib64
 FREESOURCE	=	-ffree-form  -ffree-line-length-none -fno-range-check -cpp -L/usr/lib64 -L/lib64
 F90FLAGS	=   -g -fconvert=big-endian -O3 -fbounds-check -fimplicit-none -fbacktrace -fPIC -fallow-argument-mismatch #-Wall -fcheck=array-temps,bounds,do,mem,pointer
 MODFLAG	=	-I
 LDFLAGS	=	
 CPP		=	cpp
 CPPFLAGS	=	-P -traditional  # -D_HRLDAS_URBAN_
 LIBS		=	-fopenmp
 LIBJASPER     =       -ljpeg -L/usr/lib -ljasper
 INCJASPER     =       -I/usr/include
 LIBJASPER     =       -ljpeg -ljasper
 INCJASPER     =       
 NETCDFMOD	=	-I/usr/local/include
 NETCDFLIB	=	-L/usr/local/lib -lnetcdf
 BZIP2		=       YES
 BZIP2_LIB	=       -lbz2
 BZIP2_INCLUDE	=       -I/usr/include
 RM		= 	rm -f
 CC		=	cc 

